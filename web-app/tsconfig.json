{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "*": ["*", "src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
